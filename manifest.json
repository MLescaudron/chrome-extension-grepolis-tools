{
  //Required
  "name": "Grepolis Tools",
  "version": "1.0",
  "manifest_version": 2,
  "author" : "Mathieu Lescaudron",
  "description": "Get or loot automatically cities resources every 5minutes",

  "icons":{
    "128": "icon128.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["jquery.js", "grepolis_tools.js"],
    "css": ["grepolis_tools.css"]
  }
],
  "permissions": [
    "activeTab",
    "http://*/*"
  ],

  "web_accessible_resources": ["grepolis_function.js"]

}